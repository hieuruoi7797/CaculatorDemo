<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".CaculatorFragment">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorAccent"
        android:gravity="bottom|right"
        android:paddingRight="@dimen/padding"
        android:textSize="@dimen/text_size" />

    <LinearLayout style="@style/horizontalLayout">

        <Button
            android:id="@+id/bt_AC"
            style="@style/buttonGrey"
            android:text="@string/AC" />

        <Button
            android:id="@+id/bt_reverse"
            style="@style/buttonGrey"
            android:text="@string/reverse" />

        <Button
            android:id="@+id/bt_percent"
            style="@style/buttonGrey"
            android:text="@string/percent" />

        <Button
            android:id="@+id/bt_division"
            style="@style/buttonOrange"
            android:text="@string/division" />
    </LinearLayout>

    <LinearLayout style="@style/horizontalLayout">

        <Button
            android:id="@+id/bt_7"
            style="@style/buttonGrey"
            android:text="@string/seven" />

        <Button
            android:id="@+id/bt_8"
            style="@style/buttonGrey"
            android:text="@string/eight" />

        <Button
            android:id="@+id/bt_9"
            style="@style/buttonGrey"
            android:text="@string/nine" />

        <Button
            android:id="@+id/bt_multi"
            style="@style/buttonOrange"
            android:text="@string/multi" />
    </LinearLayout>

    <LinearLayout style="@style/horizontalLayout">

        <Button
            android:id="@+id/bt_4"
            style="@style/buttonGrey"
            android:text="@string/four" />

        <Button
            android:id="@+id/bt_5"
            style="@style/buttonGrey"
            android:text="@string/five" />

        <Button
            android:id="@+id/bt_6"
            style="@style/buttonGrey"
            android:text="@string/six" />

        <Button
            android:id="@+id/bt_minus"
            style="@style/buttonOrange"
            android:text="@string/minus" />
    </LinearLayout>

    <LinearLayout style="@style/horizontalLayout">

        <Button
            android:id="@+id/bt_1"
            style="@style/buttonGrey"
            android:text="@string/one" />

        <Button
            android:id="@+id/bt_2"
            style="@style/buttonGrey"
            android:text="@string/two" />

        <Button
            android:id="@+id/bt_3"
            style="@style/buttonGrey"
            android:text="@string/three" />

        <Button
            android:id="@+id/bt_plus"
            style="@style/buttonOrange"
            android:text="@string/plus" />
    </LinearLayout>

    <LinearLayout style="@style/horizontalLayout">

        <Button
            android:id="@+id/bt_0"
            style="@style/buttonGrey"
            android:layout_weight="2"
            android:text="@string/zero" />

        <Button
            android:id="@+id/bt_dot"
            style="@style/buttonGrey"
            android:text="@string/dot" />

        <Button
            android:id="@+id/bt_equal"
            style="@style/buttonOrange"
            android:text="@string/equal" />
    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->

</LinearLayout>
